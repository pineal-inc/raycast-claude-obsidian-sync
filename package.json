{
  "name": "claude-conversation-sync",
  "title": "Claude Conversation Sync",
  "description": "Sync Claude Code conversations to a folder, organized by date and project",
  "icon": "command-icon.png",
  "author": "pineal-inc",
  "categories": ["Productivity", "Developer Tools"],
  "license": "MIT",
  "commands": [
    {
      "name": "menu-bar",
      "title": "Claude Sync Status",
      "description": "Shows sync status and syncs conversations in the background",
      "mode": "menu-bar",
      "interval": "1m"
    },
    {
      "name": "sync-now",
      "title": "Sync Claude Conversations",
      "description": "Manually sync Claude Code conversations",
      "mode": "no-view"
    },
    {
      "name": "view-conversations",
      "title": "View Claude Conversations",
      "description": "Browse recent Claude Code conversations",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "outputPath",
      "title": "Output Folder",
      "description": "Path to save conversations (e.g., ~/Documents/claude-logs)",
      "type": "directory",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.0",
    "@raycast/utils": "^1.10.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.10.0",
    "@types/react": "^17.0.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
