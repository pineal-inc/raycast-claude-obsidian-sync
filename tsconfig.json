{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Raycast Extension",
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
